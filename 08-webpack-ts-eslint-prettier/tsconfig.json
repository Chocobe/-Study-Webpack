{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "checkJs": true,

    "target": "ES5",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "Node",

    "outDir": "dist",

    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "exclude": [
    "./node_modules",
    "./dist"
  ]
}