{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
      "no-var": "error",
      "prefer-const": "error",

      "prettier/prettier": [
        "error",
        {
          "singleQuote": false,
          "semi": true,
          "useTabs": true,
          "tabWidth": 2,
          "trailingComma": "all",
          "printWidth": 150,
          "bracketSpacing": true,
          "arrowParens": "avoid"
        }
      ]
    }
}
