{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    
    /* Modules */
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true
  },

  "exclude": [
    "node_modules"
  ]
}
