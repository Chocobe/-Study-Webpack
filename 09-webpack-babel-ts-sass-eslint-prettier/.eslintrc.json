{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
      "no-var": "error",
      "prefer-const": "error",

      "prettier/prettier": [
        "error",
        {
          "semi": true,
          "singleQuote": false,
          "useTabs": true,
          "tabwidth": 2,
          "tailingComma": true
        }
      ]
    }
}
