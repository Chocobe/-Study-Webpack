{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@Address/*": ["./src/Address/*"],
      "@Info/*": ["./src/Info/*"],
      "@Phone/*": ["./src/Phone/*"],
      "@Skill/*": ["./src/Skill/*"]
    },

    /* JavaScript Support */
    "allowJs": true,
    "checkJs": true,

    /* Emit */
    "outDir": "./dist",

    /* Interop Constraints */
    "esModuleInterop": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
